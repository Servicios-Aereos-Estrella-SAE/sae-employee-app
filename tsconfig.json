{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "navigation/**/*",
    "src/presentation/**/*",
    "src/**/*", 
    "App.tsx", 
    "index.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "commitlint.config.js", "eslint.config.js"]
}
